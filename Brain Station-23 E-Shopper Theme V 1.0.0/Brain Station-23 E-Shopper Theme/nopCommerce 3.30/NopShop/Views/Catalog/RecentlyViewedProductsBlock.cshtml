@model IList<ProductOverviewModel>
@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    

<div class="brands_products"><!--brands_products-->
        <h2>@T("Products.RecentlyViewedProducts")</h2>
        <div class="brands-name">
            <ul class="nav nav-pills nav-stacked">
                @for (int i = 0; i < Model.Count; i++)
                {
                    var product = Model[i];
                    
                    <li>
                        <a href="@Url.RouteUrl("Product", new { SeName = product.SeName })" title="@product.DefaultPictureModel.Title">@if (!String.IsNullOrEmpty(product.DefaultPictureModel.ImageUrl)){
                            <img class="img-thumbnail" alt="@product.DefaultPictureModel.AlternateText" src="@product.DefaultPictureModel.ImageUrl" title="@product.DefaultPictureModel.Title" />
                        }
                        &nbsp;@product.Name</a>
                    </li> 
              
                    
                    
                }
            </ul>
        </div>
    </div>
<!--/brands_products-->




    






}