@model IList<ManufacturerModel>
@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <div class="manufacturers">
        @if (Model.Count == 1)
        {
            <span class="product-details-label"><b>@T("Products.Manufacturer"):</b></span>
        }
        else
        {
            <span class="product-details-label"><b>@T("Products.Manufacturers"):</b></span>
        }
        <span class="value">
            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];
                <a href="@Url.RouteUrl("Manufacturer", new { SeName = item.SeName })" class="text-info">@item.Name</a>
                if (i != Model.Count - 1)
                {
                <span class="separator">,</span>
                }
            }
        </span>
    </div>
}