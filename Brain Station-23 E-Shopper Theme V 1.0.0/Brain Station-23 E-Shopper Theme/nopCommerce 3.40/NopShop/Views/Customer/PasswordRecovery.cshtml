@model PasswordRecoveryModel
@using Nop.Web.Models.Customer;
@{
    Layout = "~/Views/Shared/_ColumnsTwo.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.PasswordRecovery").Text);
}


<div class="features_items my-account-page"><!--features_items-->
    <h2 class="title text-center">@T("Account.PasswordRecovery")</h2>
    <div class="custom-page-box-div">
        <div class="row">
            <div class="col-sm-12">
                @if (!String.IsNullOrEmpty(Model.Result))
                {
                    <div class="alert alert-info square-box">
                        @Model.Result
                    </div>
                }
                @using (Html.BeginForm())
                {
                    <p class="tooltip">@T("Account.PasswordRecovery.Tooltip")</p>
                    <div class="fieldset">
                        <div class="form-fields">
                            <div class="form-group row">
                                @Html.LabelFor(model => model.Email, new { @class = "col-md-2 " }, ":")
                                <div class="col-md-6">    
                                    @Html.TextBoxFor(model => model.Email, new { @class = "gray-input" })
                                </div>
                                <div class="col-md-4">
                                    @Html.RequiredHint()
                                    @Html.ValidationMessageFor(model => model.Email)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="buttons">
                        <input type="submit" name="send-email" class="button-1 btn btn-primary" value="@T("Account.PasswordRecovery.RecoverButton")" />
                    </div>
                }
            </div>
        </div>
        

    </div>
</div>


